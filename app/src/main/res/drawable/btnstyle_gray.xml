<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
         <solid
          android:color="#d0d0d0" />
            <stroke
                android:width="1dp"
                android:color="#4F4F4F" />
            <corners
                android:radius="150dp" />
            <padding
                android:left="150dp"
                android:top="150dp"
                android:right="150dp"
                android:bottom="150dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#d0d0d0"
                android:endColor="#4F4F4F"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#4F4F4F" />
            <corners
                android:radius="150dp" />
            <padding
                android:left="150dp"
                android:top="150dp"
                android:right="150dp"
                android:bottom="150dp" />
        </shape>
    </item>
</selector>